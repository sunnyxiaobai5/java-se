package swing.xh.zzf.impl;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;

public class Help extends JLabel implements ActionListener {
	private JButton btn_return;
	private TankFrame fathe;
	public Help(TankFrame fathe) {
		this.setIcon(ResUtil.bg_help);
		this.fathe=fathe;
		this.init();
	}

	public void init() {
		btn_return = new JButton(ResUtil.btn_return);
		btn_return.setBounds(650, 480, 110, 43);
		this.add(btn_return);
		btn_return.addActionListener(this);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		if(btn_return==e.getSource()){
			fathe.showCard("welcome");
		}
	}

}
