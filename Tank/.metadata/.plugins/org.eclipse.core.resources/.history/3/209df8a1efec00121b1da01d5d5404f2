package swing.xh.zzf.impl;

import java.awt.Graphics;
import java.util.List;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;

import javax.swing.JLabel;

public class Game extends JLabel implements Runnable, KeyListener {
	private int x = 450, y = 600;
	private Thread thread;
	private TankFrame father;
	private Tank tank;
	private List<Tank> tanks=new ArrayList<Tank>();
	public void initTank(){
		Tank temp=null;
		temp=new Tank(0,0,DirUtil.Down,false);
		tanks.add(temp);
		temp=new Tank(450,0,DirUtil.Down,false);
		tanks.add(temp);
		temp=new Tank(900,0,DirUtil.Down,false);
		tanks.add(temp);
	}
	public void init(){
		tank=new Tank(x,y,DirUtil.Stop,true);
		this.setIcon(ResUtil.bg_game);
		father.setFocusable(true);
		father.addKeyListener(this);
		thread = new Thread(this);
		thread.start();
		
	}
	public Game(TankFrame father) {
		this.father = father;
		this.init();
		this.initTank();
	}

	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		tank.draw(g);
		for(int i=0;i<tanks.size();i++){
			tanks.get(i).draw(g);
		}
	}

	@Override
	public void run() {
		while (true) {
			this.repaint();
			try {
				Thread.sleep(50);
			} catch (Exception e) {
				e.printStackTrace();
			}
		}

	}

	@Override
	public void keyPressed(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_UP) {
			tank.dir=DirUtil.Up;
			y-=2;
			}
		
		if (e.getKeyCode() == KeyEvent.VK_DOWN) {
			tank.dir=DirUtil.Down;
			y+=2;
			}
		
		if (e.getKeyCode() == KeyEvent.VK_LEFT) {
			tank.dir=DirUtil.Left;
			x-=2;
			}
		if (e.getKeyCode() == KeyEvent.VK_RIGHT) {
			tank.dir=DirUtil.Right;
			x+=2;
			}
		

	}

	@Override
	public void keyTyped(KeyEvent e) {
		// TODO Auto-generated method stub

	}

	@Override
	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub

	}
}
